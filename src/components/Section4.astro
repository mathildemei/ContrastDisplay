---
import { Image } from "astro:assets";
import contrast1 from "../assets/images/contrast7.png";
import contrast2 from "../assets/images/contrast2.png";
import contrast3 from "../assets/images/contrast3.png";
import contrast4 from "../assets/images/contrast4.png";
import contrast5 from "../assets/images/contrast6.png";
---

<section class="bg-beige pt-32">
  <div class="overflow-clip">
    <section id="horisontalscrollsection" class="h-[500vw]">
      <ul id="horisontalliste" class="list-none pl-0 flex sticky top-[10vh]">
        <li
          class="pl-32 flex items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"
        >
          <figure class="flex flex-row">
            <Image src={contrast1} class="w-full" alt="foto" />
          </figure>
        </li>
        <li
          class="flex items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"
        >
          <figure class="flex flex-row">
            <Image src={contrast2} class="w-full" alt="foto" />
          </figure>
        </li>
        <li
          class="flex items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"
        >
          <figure class="flex flex-row">
            <Image src={contrast3} class="w-full" alt="foto" />
          </figure>
        </li>
        <li
          class="flex items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"
        >
          <figure class="flex flex-row">
            <Image src={contrast4} class="w-full" alt="foto" />
          </figure>
        </li>
        <li
          class="flex items-start justify-center flex-col overflow-hidden flex-grow-0 flex-shrink-0 flex-auto"
        >
          <figure class="flex flex-row">
            <Image src={contrast5} class="w-full" alt="foto" />
          </figure>
        </li>
      </ul>
    </section>
  </div>
</section>

<script>
  /* Import af Motion One biblioteket */
  import { animate, scroll } from "motion";

  scroll(
    animate("#horisontalliste", {
      transform: ["none", "translateX(-140vw)"],
    }),
    { target: document.querySelector("#horisontalscrollsection") }
  );
</script>
